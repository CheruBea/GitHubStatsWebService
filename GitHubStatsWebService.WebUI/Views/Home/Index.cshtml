@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">GitHub Stats Web Service</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/#features">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" href="https://your-deployed-project-url.com">Go to Application</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section id="home" class="cover">
        <div class="container">
            <h1 class="display-4">GitHub Stats Web Service</h1>
            <p class="lead">Get insights into GitHub repositories</p>
            <form id="repoForm" asp-action="Search" method="post">
                <div class="form-group">
                    <label for="repoDetails">Enter GitHub Repository URL or Owner/Repo Name:</label>
                    <input type="text" class="form-control" id="repoDetails" name="repoDetails" placeholder="e.g., https://github.com/owner/repo or owner/repo">
                </div>
                <button type="submit" class="btn btn-primary">Fetch Repository Statistics</button>
            </form>
            <a class="btn btn-primary btn-lg" href="#features">Explore Features</a>
        </div>
    </section>

    <section id="features" class="my-5">
        <div class="container">
            <h2>Key Features</h2>
            <div class="row justify-content-center">
                <div class="col-md-4 feature">
                    <h3>Repository Search</h3>
                    <p>
                        Quickly search for any public GitHub repository and view its statistics, including stars, forks, issues, and more.
                    </p>
                </div>
                <div class="col-md-4 feature">
                    <h3>Commit History</h3>
                    <p>
                        View detailed commit history for each repository, including commit messages, authors, and dates.
                    </p>
                </div>
                <div class="col-md-4 feature">
                    <h3>Contributor Insights</h3>
                    <p>
                        Gain insights into repository contributors, their contributions, and activity levels.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="my-5">
        <div class="container">
            <h2>About the Project</h2>
            <p>
                This project aims to provide an intuitive and easy-to-use web service for fetching and displaying GitHub repository statistics and insights. Built using ASP.NET Core, C#, and the GitHub API, it serves as a demonstration of modern web development practices and API integration.
            </p>
        </div>
    </section>

    <footer>
        <p>&copy; 2024 GitHub Stats Web Service. All rights reserved.</p>
    </footer>
</body>
</html>
